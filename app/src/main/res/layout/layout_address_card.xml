<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/light_gray"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Name Label -->
        <TextView
            android:id="@+id/label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name EditText -->
        <EditText
            android:id="@+id/edit_person_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_name"
            android:layout_marginTop="4dp" />

        <!-- Mobile Label -->
        <TextView
            android:id="@+id/label_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_person_name_edit_text"
            android:layout_marginTop="8dp" />

        <!-- Mobile EditText -->
        <EditText
            android:id="@+id/edit_mobile_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter your mobile number"
            android:inputType="phone"

            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_mobile"
            android:layout_marginTop="4dp" />

        <!-- Address Label -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_mobile_edit_text"
            android:layout_marginTop="8dp" />

        <!-- Address EditText -->
        <EditText
            android:id="@+id/edit_address_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter your address"
            android:minLines="2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_address"
            android:layout_marginTop="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
